{
  "name": "posturereminder",
  "version": "1.1.0",
  "repository": "https://github.com/adamgonen/PostureReminder",
  "author": "Adam Gonen",
  "scripts": {
    "clean": "rm -rf dist && cpy manifest.json dist && cpy icons/* dist/icons && cpy src/popup.html dist",
    "prebuild": "yarn clean",
    "prewatch": "yarn clean",
    "build:popup-background": "NODE_ENV=production webpack --config webpack.config.js",
    "build": "npm-run-all build:*",
    "watch:popup-background": "NODE_ENV=development webpack --config webpack.config.js -w",
    "watch": "npm-run-all --parallel watch:*",
    "zip": "mkdir -p builds/$npm_package_version && bestzip builds/$npm_package_version/extension.zip dist/*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.147",
    "@types/node": "^16.3.3",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "awesome-typescript-loader": "^5.2.1",
    "bestzip": "^2.2.0",
    "cpy-cli": "^3.1.1",
    "css-loader": "^6.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2"
  }
}
